{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "lerna run serve --ignore docs --stream --parallel",
    "dev:docs": "lerna run dev --scope wevue.org --stream",
    "lint": "lerna exec lint --scope we-vue --stream",
    "test": "lerna run test --scope we-vue --stream",
    "test:watch": "lerna run test:watch --scope we-vue --stream",
    "test:coverage": "lerna run test:coverage --scope we-vue --stream"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "yarn run lint",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.0.0",
    "commitizen": "^3.0.2",
    "concurrently": "^4.0.1",
    "conventional-changelog": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.9.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-friendly-formatter": "^4.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-typescript": "^0.14.0",
    "eslint-plugin-vue": "^5.0.0",
    "fork-ts-checker-webpack-plugin": "^0.5.0",
    "git-branch": "^2.0.1",
    "husky": "^1.3.1",
    "inquirer": "^6.0.0",
    "lerna": "^3.7.1",
    "lint-staged": "^8.0.0",
    "listr": "^0.14.0",
    "prettier": "^1.14.3",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.0",
    "sass-loader": "^7.0.0",
    "semver": "^5.3.0",
    "shelljs": "^0.8.0",
    "ts-loader": "^5.3.0",
    "tslint": "^5.11.0",
    "typescript": "^3.2.0",
    "typescript-eslint-parser": "^22.0.0",
    "webpack": "^4.28.0",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
